<!DOCTYPE html>
<html lang="en">
    <head>
      <%- include('./components/head') %>
      <title>Sign-In</title>
    </head>
    <body>
        <%- include('./components/navbar') %>
        <div class="container">
            <div class="row my-3">
                <div class="col-md-8 mb-4">
                  <h2>Sign-In Form</h2>
                    <form class="form-horizontal" method="POST" action="/signin">
                        <div class="form-group">
                          <label class="control-label col-sm-2 m-2">Username</label>
                          <div class="col-sm-10">
                            <input type="text" class="form-control m-2" name="username" placeholder="Email or Username">
                          </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2 m-2">Password</label>
                            <div class="col-sm-10">
                              <input type="password" class="form-control m-2" name="password" >
                            </div>
                        </div>
                        <div class="form-group">
                          <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary m-2">Log in</button>
                            <a class="btn btn-success" href="/signin">Sign-Up</a>
                          </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
