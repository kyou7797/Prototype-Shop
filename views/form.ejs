<!DOCTYPE html>
<html lang="en">
    <head>
      <%- include('./components/head') %>
      <title>แบบฟอร์มบันทึกข้อมูล</title>
    </head>
    <body>
        <%- include('./components/navbar') %>
        <div class="container">
            <div class="row my-3">
                <div class="col-md-8 mb-4">
                    <form class="form-horizontal" method="POST" action="/insert" enctype="multipart/form-data">
                        <div class="form-group">
                          <label class="control-label col-sm-2 m-2">ชื่อสินค้า</label>
                          <div class="col-sm-10">
                            <input type="text" class="form-control m-2" name="name">
                          </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2 m-2">ราคา</label>
                            <div class="col-sm-10">
                              <input type="text" class="form-control m-2" name="price">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2 m-2">ภาพสินค้า</label>
                            <div class="col-sm-10">
                              <input type="file" class="form-control m-2" name="image">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2 m-2">รายละเอียด</label>
                            <div class="col-sm-10 m-2">
                                <textarea class="form-control" cols="30" rows="4" name="description"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                          <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary m-2">บันทึก</button>
                          </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
